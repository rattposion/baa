{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend da aplicação de gestão de produção",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "create-admin": "ts-node src/scripts/createAdmin.ts",
    "create-production-index": "ts-node src/scripts/createProductionIndex.ts",
    "fix-reset-stock": "ts-node src/scripts/fixResetStock.ts",
    "check-reset-status": "ts-node src/scripts/checkResetStatus.ts",
    "test-production-api": "ts-node src/scripts/testProductionAPI.ts",
    "check-reset-in-stock": "ts-node src/scripts/checkResetInStock.ts",
    "corrigir-estoque": "ts-node src/scripts/corrigirEstoqueCompleto.ts",
    "migrar-reset-stock": "ts-node src/scripts/migrarResetStock.ts",
    "verificar-reset-stock": "ts-node src/scripts/verificarResetStock.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "mongodb",
    "railway"
  ],
  "author": "Wesley",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.3",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
